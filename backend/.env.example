# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# PostgreSQL Database
# Option 1: Use DATABASE_URL (recommended for cloud databases like Supabase, Railway, etc.)
DATABASE_URL=postgresql://username:password@host:5432/database_name

# Option 2: Or use individual database parameters
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ordereasy
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_SSL=false

# JWT Configuration
# Generate a strong secret with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_very_long_random_secret_key_here_generate_new_one
JWT_EXPIRES_IN=7d

# Email Configuration (Optional - for reservation confirmations)
SEND_EMAILS=false
EMAIL_FROM="OrderEasy <noreply@ordereasy.app>"

# SMTP Settings (if SEND_EMAILS=true)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Kitchen Dashboard PIN (not recommended - should be moved to database)
# KITCHEN_PIN=1234

# Stripe Payment Integration
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Cleanup job coordination (single runner across instances)
# Arbitrary 32-bit integer used by Postgres advisory lock
CLEANUP_ADVISORY_LOCK_KEY=842150451

# Reservation Policy
# Hours before reservation start when cancellations/refunds are allowed for confirmed reservations
CANCELLATION_WINDOW_HOURS=12

# Reservation duration (minutes) used for overlap/conflict checks
RESERVATION_DURATION_MINUTES=90
